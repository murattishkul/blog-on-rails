<div class="section">

  <%= simple_form_for @article do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :title, input_html: { class: 'input', type: 'display'}, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
        <%= f.input :text, input_html: { class: 'textarea', type: 'display'}, wrapper: false, label_html: { class: 'label' } %>
      </div>
  </div>
  <%= f.button :submit, 'Update post', class: "button is-primary" %>
  <% end %>
  <%= link_to 'Back', articles_path %>
</div>